<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include('./partials/head.ejs') %>
  </head>
  <body>
    <h1>Workout Index Page</h1>
    <h4><a href="/homefit/new">Add Workout</a></h4>
      <div class="main-container">
        <% for(let i = 0; i < workouts.length; i++) { %>
          <div class="workout-container">
            <div class="workout-title">
              <h2><a href="/homefit/<%= workouts[i].id %>"><%= workouts[i].title %></a></h2>
            </div>
            <div class="workout-duration">
              <h2><%= workouts[i].duration %></h2>
            </div>
            <div class="workout-equipment">
              <% if(workouts[i].equipmentNeeded === true) { %>
                <h4>Equipment is needed for this workout</h4>
              <% } else { %>
                <h4>Equipment is not needed for this workout</h4>
              <% } %>
            </div>
            <div class="index-video">
              <iframe src="<%= workouts[i].video %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            </div>
          </div>
        <% } %>
      </div>
  </body>
</html>

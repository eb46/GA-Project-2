<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <header>
      <nav class="main-nav">
        <%- include('./partials/header.ejs') %>
      </nav>
    </header>
    <form class="new-form" action="/homefit/index" method="POST">
      <fieldset>
        <legend>Enter New Workout</legend>
        <!-- --- workout title --- -->
        <label for="title">Workout Title</label>
        <input id="title" type="text" name="title"/>
        <!-- --- workout duration --- -->
        <label for="duration">Workout Duration</label>
        <!-- <input id="duration" type="text" name="duration"/> -->
        <select id="duration" name="duration">
          <option value="10 minutes">10 minutes</option>
          <option value="20 minutes">20 minutes</option>
          <option value="30 minutes">30 minutes</option>
        </select>
        <!-- --- equipment needed --- -->
        <label for="equipmentNeeded">Equipment Needed?</label>
        <input id="equipmentNeeded" type="checkbox" name="equipmentNeeded"/>
        <!-- --- warmup exercise --- -->
        <label for="warmpup">Is there a warmup exercise?</label>
        <input id="warmup" type="checkbox" name="warmpup"/>
        <!-- --- cooldown exercise --- -->
        <label for="cooldown">Is there a cooldown exercise?</label>
        <input id="cooldown" type="checkbox" name="cooldown"/>
        <!-- --- workout description --- -->
        <label for="description">Workout Description</label>
        <textarea id="description" name="description"></textarea>
        <!-- --- workout video --- -->
        <label for="video">Embedded file link</label>
        <input id="video" type="text" name="video"/>
      </fieldset>
      <input type="submit" value="Enter Workout">
    </form>
  </body>
</html>

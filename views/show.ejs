<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include('./partials/head.ejs') %>
  </head>
  <body>
    <h1>Show Page</h1>
    <a href="/homefit/index">Back Home</a>
    <div class="show-container">
      <div class="show-title">
        <h1><%= workout.title %></h1>
      </div>
      <div class="show-duration">
        <h3><%= workout.duration %></h3>
      </div>
      <div class="show-video">
        <iframe src="<%= workout.video %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
      </div>
    </div>
    <a href="/homefit/<%= workout.id %>/edit">Edit Workout</a>
    <form class="delete-button" action="/homefit/<%= workout.id %>?_method=DELETE" method="POST">
      <input type="submit" value="Delete">
    </form>
  </body>
</html>

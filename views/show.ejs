<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include('./partials/head.ejs') %>
  </head>
  <body>
    <nav class="main-nav">
      <%- include('./partials/header.ejs') %>
    </nav>
    <div class="show-container">
      <div class="show-title">
        <h1><%= workout.title %></h1>
      </div>
      <div class="show-duration">
        <h3><%= workout.duration %></h3>
      </div>
      <div class="workout-equipment">
        <% if(workout.equipmentNeeded === true) { %>
          <h4>Equipment is needed for this workout</h4>
        <% } else { %>
          <h4>Equipment is not needed for this workout</h4>
        <% } %>
      </div>
      <div class="workout-warmup">
        <% if(workout.warmup === true) { %>
          <h4>There is a warmup exercise</h4>
        <% } %>
      </div>
      <div class="workout-cooldown">
        <% if(workout.cooldown === true) { %>
          <h4>There is a cooldown exercise</h4>
        <% } %>
      </div>
      <div class="workout-description">
        <h4><%= workout.description %></h4>
      </div>
      <div class="show-video">
        <iframe src="<%= workout.video.replace(/watch\?v\=/, 'embed/') %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
      </div>
      <% if (currentUser) { %>
        <% if (currentUser.username === 'Admin') { %>
          <div class="show-buttons">
            <button><a href="/homefit/<%= workout.id %>/edit">Edit Workout</a></button>
            <form class="delete-button" action="/homefit/<%= workout.id %>?_method=DELETE" method="POST">
              <input type="submit" value="Delete">
            </form>
          </div>
        <% } %>
      <% } %>
    </div>
    <%- include('partials/footer.ejs') %>
  </body>
</html>

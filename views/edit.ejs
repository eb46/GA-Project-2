<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
  <%- include('./partials/head.ejs') %>
</head>
<body>
  <nav class="main-nav">
    <%- include('./partials/header.ejs') %>
  </nav>
    <form class="new-form" action="/homefit/<%= workout.id %>?_method=PUT" method="POST">
      <div class="enter-workout">
        <legend>Edit Workout</legend>
        <!-- --- workout title --- -->
        <label for="title">Workout Title</label>
        <input class="title" type="text" name="title" value="<%= workout.title %>"/>
        <!-- --- workout duration --- -->
        <label for="duration">Workout Duration</label>
        <input class="duration" type="text" name="duration" value="<%= workout.duration %>"/>
        <!-- --- equipment needed --- -->
        <label for="equipmentNeeded">Equipment Needed?</label>
        <select class="equipmentNeeded" name="equipmentNeeded">
          <option value="Yes">Yes</option>
          <option value="No">No</option>
        </select><br>
        <!-- --- warmup exercise --- -->
        <label for="warmpup">Is there a warmup exercise?</label>
        <select class="warmup" name="warmup" value="<%= workout.warmup %>">
          <option value="Yes">Yes</option>
          <option value="No">No</option>
        </select><br>
        <!-- --- cooldown exercise --- -->
        <label for="cooldown">Is there a cooldown exercise?</label>
        <select class="cooldown" name="cooldown">
          <option value="Yes">Yes</option>
          <option value="No">No</option>
        </select><br>
        <!-- --- workout description --- -->
        <label for="description">Workout Description</label>
        <textarea class="description" name="description" maxlength="80" value="description"></textarea>
        <!-- --- workout video --- -->
        <label for="video">Embedded file link</label>
        <input class="video" type="text" name="video" value="<%= workout.video %>"/>
      </div>
      <input type="submit" value="Edit Workout"><br>
    </form>
    <%- include('partials/footer.ejs') %>
  </body>
</html>

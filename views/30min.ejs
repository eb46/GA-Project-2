<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include('./partials/head.ejs') %>
  </head>
  <body>
    <%- include('./partials/header.ejs') %>
    <div class="index-duration-container">
      <div class="index-duration-title">
        <h3>Workouts</h3>
      </div>
      <div class="index-duration-selector">
        <!-- <a href="#">10 minute</a>
        <a href="#">20 minute</a>
        <a href="#">30 minute</a> -->
      </div>
    </div>
      <div class="main-container">
        <% for(let i = 0; i < workouts.length; i++) { %>
          <div class="workout-container">
            <div class="workout-title">
              <h2><a href="/homefit/<%= workouts[i].id %>"><%= workouts[i].title %></a></h2>
            </div>
            <div class="workout-duration">
              <h2><%= workouts[i].duration %></h2>
            </div>
            <div class="index-video">
              <iframe src="<%= workouts[i].video %>" frameborder="0" allow="encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            </div>
          </div>
        <% } %>
      </div>
  </body>
</html>
